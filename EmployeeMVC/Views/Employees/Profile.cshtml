@model EmployeeMVC.Models.Domain.Employee

<form asp-action="Profile" method="post">
    <input type="number" asp-for="Id" class="form-control" readonly />

    <input type="text" class="form-control" asp-for="Name">

    <label for="" class="form-label">Email</label>
    <input type="email" class="form-control" asp-for="Email">

    <label for="" class="form-label">Phone</label>
    <input type="number" class="form-control" asp-for="Phone">



    <label for="" class="form-label">Salary</label>
    <input type="number" class="form-control" asp-for="Salary">

    <label for="" class="form-label" mb-3>Department</label>
    <input type="text" class="form-control" asp-for="Department">


    <button type="submit" class="btn btn-primary">Submit</button>
</form> 