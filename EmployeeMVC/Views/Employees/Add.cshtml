@model EmployeeMVC.Models.AddEmployeeModel
@{
}

<form method="POST" action = "Add" enctype="multipart/form-data">
    <div class="mb-3">

        <label> Profile Image</label>
        <input type="file" asp-for="ProfileImage" />


        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for = "Name">

        <label for="" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email">

        <label for="" class="form-label">Phone</label>
        <input type="number" class="form-control" asp-for="Phone">

        

        <label for="" class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="Salary">

        <label for="" class="form-label" mb-3>Department</label>
        <input type="text" class="form-control" asp-for="Department">


        <button type="submit" class="btn btn-primary">Submit</button>
        
    </div>
  
</form>
